<%- include('../partials/header') %> <% if (banner) { %>
<section
  class="banner"
  style="background-image: url('<%= banner.backgroundUrl%>')"
>
  <%= banner.title %>
</section>

<% } %> <% if (titlePage) { %>
<h2><%= titlePage %></h2>
<% } %> <% if (list.length>0) { %>
<div class="container list">
  <% list.forEach(function(pet){ %>
  <a href="/get-pet/<%= pet.id %>" target="">
    <div class="item">
      <img src="/images/<%= pet.image %>" class="item--image" />
      <div class="item--name"><%= pet.name %></div>
      <div class="item--color">Cor: <%= pet.color %></div>
      <div class="item--genre">Gênero: <%= pet.sex %></div>
    </div>
  </a>
  <% }); %>
</div>

<% } else { %>
<div class="container no-list">
  <h2>Não foi possível encontrar animais para o termo buscado</h2>
</div>
<% } %> <%- include('../partials/footer') %>
