<%- include('../partials/header') %> <% if (pet) { %>
<div class="container pet-page-container">
  <div class="col-pet">
    <img src="/images/<%= pet.image %>" class="pet-page-image" />
  </div>
  <div class="col-pet">
    <div class="item--name"><%= pet.name %></div>
    <div class="item--color">Cor: <%= pet.color %></div>
    <div class="item--genre">Gênero: <%= pet.sex %></div>
    <button class="pet-adopt">Adotar</button>
  </div>
</div>
<% } else { %>
<div class="container no-list">
  <h2>O pet não encontrado ou indisponível</h2>
</div>
<% } %> <%- include('../partials/footer') %>
